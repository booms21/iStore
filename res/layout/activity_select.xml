<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#fff">

    <include layout="@layout/layout_title"
        android:id="@+id/include"></include>

    <TextView
        android:id="@+id/select_info"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
         android:layout_alignParentLeft="true"
        android:layout_below="@+id/include"
        android:text="iStroe科技"
        android:gravity="left|bottom"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/select_hint"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
         android:layout_alignParentLeft="true"
        android:layout_below="@+id/select_info"
        android:text="请选择您喜欢的项目↓"
        android:gravity="left|top"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/select_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
         android:layout_alignParentRight="true"
        
        android:layout_alignParentStart="true"
         android:layout_alignParentLeft="true"
        android:layout_below="@+id/select_hint"
        android:background="#e6e6e6"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentStart="true"
         android:layout_alignParentLeft="true"
        android:layout_below="@+id/select_line">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_line">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
 <ImageView
                    android:id="@+id/img_iPhone"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:src="@drawable/iphone" />
           

            </TableRow>

            <TextView
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#b1b1b1"
                android:text="" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               
     <ImageView
                    android:id="@+id/img_Mac"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:src="@drawable/mac" />
                

            </TableRow>

            <TextView
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#b1b1b1"
                android:text="" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_iPad"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ipad" />


            </TableRow>

            <TextView
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#b1b1b1"
                android:text="" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_other"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:src="@drawable/other" />


            </TableRow>

        </TableLayout>
    </ScrollView>

</RelativeLayout>